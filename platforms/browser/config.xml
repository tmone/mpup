<?xml version='1.0' encoding='utf-8'?>
<widget id="vn.com.kerryexpress.mpup" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mobile Pickuper</name>
    <description>
        Tool pickup of Kerry Express VN.
    </description>
    <author email="vthinh.nguyen@gmail.com" href="https://kes.kerryexpress.com.vn">
        IT Kerry Express Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="loadUrlTimeoutValue" value="60000" />
    <preference name="SplashScreenDelay" value="60000" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="APPCENTER_ANALYTICS_ENABLE_IN_JS" value="true" />
    <preference name="APPCENTER_CRASHES_ALWAYS_SEND" value="false" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="phonegap-version" value="cli-8.1.1" />
    <preference name="android-build-tool" value="gradle" />
</widget>
